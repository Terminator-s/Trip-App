<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context="SplashActivity">

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/progress"
            android:progressTint="@color/colorAccent"
            android:progressBackgroundTint="@android:color/background_light"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="72dp" android:layout_marginEnd="72dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="81dp" android:layout_marginStart="81dp"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/textView" android:layout_marginBottom="35dp"/>
    <TextView
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:progressTint="@color/colorAccent"
            android:id="@+id/textView"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="44dp" android:layout_marginEnd="44dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="83dp" android:layout_marginStart="83dp"
            android:layout_alignParentLeft="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="24sp"
            android:textColor="@android:color/background_light" android:textStyle="bold|italic"
            android:layout_alignParentBottom="true" android:layout_marginBottom="219dp"
    />
    <ImageView
            android:src="@drawable/bus_splash"
            android:layout_width="268dp"
            android:layout_height="173dp" android:id="@+id/imageView8" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="73dp" android:layout_marginEnd="73dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="71dp" android:layout_marginStart="71dp"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/progress"
            android:layout_marginBottom="29dp" android:layout_marginTop="223dp" android:layout_alignParentTop="true"/>
</RelativeLayout>